{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "ES2018",
    "lib": [
      "ES2018",
      "ESNext.AsyncIterable"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    // "jsx": "preserve",
    "noImplicitAny": true,
    "typeRoots": [
      "node_modules/@types",
    ],
    "baseUrl": ".",
    "paths": {
      "@src/*": [
        "src/*"
      ],
      "@root/*": [
        "*"
      ]
    },
    "emitDecoratorMetadata": true,
  },
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ],
  "include": [
    "**/*.ts",
    "**/*.js"
  ]
}