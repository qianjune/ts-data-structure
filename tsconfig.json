{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "ES2018",
    "lib": [
      "ES2018",
      "ESNext.AsyncIterable"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    // "jsx": "preserve",
    "noImplicitAny": true,
    "typeRoots": [
      "node_modules/@types",
    ],
    "baseUrl": ".",
    "paths": {
      "@src/*": [
        "src/*"
      ],
      "@root/*": [
        "*"
      ],
      "@micro-services/*": [
        "micro-services/*"
      ]
    },
    "emitDecoratorMetadata": true,
    // "types": [
    //   "reflect-metadata",
    //   "jest",
    //   "node",
    //   "koa"
    // ],
  },
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ],
  "include": [
    "**/*.ts",
    "**/*.js",
  ]
}